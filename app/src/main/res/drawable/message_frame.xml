<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom Border Layer (vector) -->
    <item>
        <vector
                android:width="91dp"
                android:height="48dp"
                android:viewportWidth="91"
                android:viewportHeight="48">
            <group>
                <clip-path
                        android:pathData="M12 0H79C85.6274 0 91 5.37258 91 12V36C91 42.6274 85.6274 48 79 48H12C5.37258 48 0 42.6274 0 36V12C0 5.37258 5.37258 0 12 0Z" />
                <!-- Background Fill for Border Layer -->
                <path
                        android:pathData="M0 0V48H91V0"
                        android:fillColor="#1B1B1B" />
                <!-- Outer Stroke Path -->
                <path
                        android:pathData="M12 0H79C85.6274 0 91 5.37258 91 12V36C91 42.6274 85.6274 48 79 48H12C5.37258 48 0 42.6274 0 36V12C0 5.37258 5.37258 0 12 0Z"
                        android:strokeWidth="2"
                        android:strokeColor="#3C3C3C" />
            </group>
        </vector>
    </item>

    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1B1B1B" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Inner shadow left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="360"
                    android:centerColor="#00000000"
                    android:centerX="0.1"
                    android:endColor="#1B1B1B"
                    android:startColor="#80F2F2F2" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Inner shadow top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="75"
                    android:centerColor="#00000000"
                    android:centerY="0.2"
                    android:endColor="#1B1B1B"
                    android:startColor="#80F2F2F2" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Border with padding and gradient -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1B1B1B" />
            <corners android:radius="12dp" />
            <gradient
                    android:startColor="#80000000"
                    android:endColor="#80000000"
                    android:centerColor="#40000000"
                    android:type="linear"
                    android:angle="270" />
            <padding
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp" />
        </shape>
    </item>

    <!-- Vertical Border Line -->
    <item android:left="45dp" android:right="45dp">
        <shape android:shape="line">
            <stroke
                    android:width="2dp"
                    android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>
