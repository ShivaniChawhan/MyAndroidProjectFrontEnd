<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myprofile_blur_bg">

    <LinearLayout
        android:id="@+id/more_platform_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:clipToOutline="true"
        android:background="#80000000"
        android:orientation="horizontal"/>

    <FrameLayout
        android:id="@+id/diff_platform"
        android:layout_width="342dp"
        android:layout_height="264dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="192dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/platforms_frame">

        <View
            android:id="@+id/insta_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/insta_logo"/>
        <TextView
            android:id="@+id/insta_engage"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="24dp"
            android:text="@string/fo_engage"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24sp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <View
                android:id="@+id/fb_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="72dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/facebook_logo"/>
        <TextView
                android:id="@+id/fb_engage"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="72dp"
                android:text="@string/fo_engage"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="24sp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

        <View
                android:id="@+id/snapcht_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/snapchat_logo"/>
        <TextView
                android:id="@+id/snap_engage"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="120dp"
                android:text="@string/fo_engage"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="24sp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
        <View
                android:id="@+id/youtube_logo"
                android:layout_width="35.56dp"
                android:layout_height="35dp"
                android:layout_marginTop="166dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/youtube_logo"/>
        <TextView
                android:id="@+id/yb_engage"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="168dp"
                android:text="@string/fo_engage"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="24sp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

        <View
                android:id="@+id/twitter_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="216dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/twitter_logo"/>
        <TextView
                android:id="@+id/_engage"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="216dp"
                android:text="@string/fo_engage"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="24sp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>