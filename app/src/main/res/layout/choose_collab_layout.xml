                android:layout_width="match_parent"
                android:layout_height="136dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/choose_colab_frame">

            <ImageView
                    android:id="@+id/banner_1"
                    android:layout_width="143dp"
                    android:layout_height="136dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/collabs_business_banner"/>

            <!-- collab title-->
            <TextView
                    android:id="@+id/colab_text1"
                    android:layout_width="199dp"
                    android:layout_height="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="159dp"
                    android:layout_marginBottom="81dp"
                    android:layout_marginEnd="17dp"
                    android:gravity="center_vertical"
                    android:text="@string/diff_collabs_name"
                    android:lineHeight="24sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"
                    android:textColor="#F2F2F2"/>

            <!-- collab description-->
            <TextView
                    android:id="@+id/collab_description1"
                    android:layout_width="199dp"
                    android:layout_height="59dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="159dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="17dp"
                    android:gravity="top"
                    android:text="@string/collab_descriptions"
                    android:fontFamily="@font/poppins_semibold"
                    android:lineHeight="21sp"
                    android:textSize="14sp"
                    android:textColor="#7F858A"/>
        </FrameLayout>

        <!-- choose collab frame 2-->
        <FrameLayout
                android:id="@+id/colab_frame2"
                android:layout_width="match_parent"
