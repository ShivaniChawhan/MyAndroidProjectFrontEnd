<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer rectangle with curved corners -->
    <item
    android:left="8dp"
    android:right="8dp"
    android:top="8dp"
    android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner shadow gradient effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#407F858A"
                    android:centerColor="#262626"
                    android:centerY="0.05"
                    android:endColor="#80262626"
                    android:angle="270" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>