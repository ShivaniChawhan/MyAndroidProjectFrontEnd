<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/choose_collab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1B1B1B">

        <!-- collab top bar-->
        <FrameLayout
                android:id="@+id/collab_top_bar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintTop_toTopOf="parent"
                android:clipToOutline="true"
                android:background="#212121">

            <FrameLayout
                    android:id="@+id/arrow_frame"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="347dp"
                    android:layout_gravity="center_vertical">

                <View
                        android:id="@+id/back_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/arrow_left"
                        android:backgroundTint="#FFFFFF"/>

            </FrameLayout>

            <!-- top bar center text -->
            <TextView
                    android:id="@+id/choose_collab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="top"
                    android:text="@string/choose_collab_text"
                    android:fontFamily="@font/raleway_medium"
                    android:lineHeight="19sp"
                    android:textSize="16sp"
                    android:letterSpacing="0.03"
                    android:textColor="#F2F2F2"/>
        </FrameLayout>

    <ScrollView
            android:id="@+id/scrollable_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="NotSibling">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <!-- choose collab frame 1 -->
