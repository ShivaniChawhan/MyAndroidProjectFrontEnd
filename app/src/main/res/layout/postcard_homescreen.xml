
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/postcard_homescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B1B1B"
        tools:context=".MainActivity">

    <!-- Creators layout -->
<FrameLayout
        android:id="@+id/creators_layout"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_bar1"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/creator_rectangle">

    <!-- creators photo -->
    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/creators_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="236dp"
            android:layout_marginEnd="263dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:background="@android:color/transparent"/>

    <!-- Creators name  -->
    <TextView
            android:id="@+id/creators_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="282dp"
            android:gravity="top"
            android:fontFamily="@font/raleway_bold"
            android:lineHeight="38sp"
            android:textSize="32sp"
            android:letterSpacing="0.02"
            android:textColor="#2F302E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/creators_name"/>

    <!-- creators follower count -->
    <TextView
            android:id="@+id/creator_follower_count"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="76dp"
            android:layout_marginStart="131dp"
            android:layout_marginBottom="248dp"
            android:text="@string/creator_follower_count"
            android:gravity="center_horizontal|top"
            android:fontFamily="@font/opensans_bold"
            android:lineHeight="24sp"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="#2F302E"/>
    <TextView
            android:id="@+id/follower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77.5dp"
            android:layout_marginStart="190dp"
            android:layout_marginBottom="249.5dp"
            app:layout_constraintStart_toEndOf="@id/creator_follower_count"
            android:text="@string/followers_name"
            android:gravity="center_horizontal|top"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="21sp"
            android:textSize="14sp"
            android:textColor="#2F302E"
            app:layout_constraintTop_toTopOf="@id/creator_follower_count"/>

    <!-- post count -->
    <TextView
            android:id="@+id/post_count"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="77dp"
            android:layout_marginStart="265dp"
            android:layout_marginBottom="249dp"
            android:gravity="center_horizontal|top"
            android:text="@string/post_count"
            android:fontFamily="@font/opensans_bold"
            android:lineHeight="22sp"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="#2F302E"/>

    <TextView
            android:id="@+id/post_name"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="77.5dp"
            android:layout_marginBottom="249.5dp"
            android:text="@string/post_name"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="21sp"
            android:textSize="14sp"
            android:textColor="#2F302E"/>

    <!-- creators bio -->
    <TextView
            android:id="@+id/creators_bio"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="204dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24sp"
            android:textSize="16sp"
            android:textColor="#4C4C4C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/creators_bio"/>

    <!-- Location Details  -->
    <View
            android:id="@+id/location"
            android:layout_width="15.24dp"
            android:layout_height="17.48dp"
            android:layout_marginTop="155.76dp"
            android:layout_marginStart="23.88dp"
            android:layout_marginBottom="174.76dp"
            android:layout_marginEnd="335.88dp"
            android:background="@drawable/location"/>
    <TextView
            android:id="@+id/location_details"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="154dp"
            android:layout_marginStart="43.12dp"
            android:layout_marginBottom="173dp"
            android:text="@string/location_details"
            android:gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="21sp"
            android:textSize="14sp"
            android:textColor="#4C4C4C"/>

    <View
            android:id="@+id/creator_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="189dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="159dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#33000000"/>

    <!-- need fellow creator text -->
    <TextView
            android:id="@+id/need_fellow"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/need_fellow"
            android:gravity="center_vertical"
            android:layout_marginTop="205dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="124dp"
            android:fontFamily="@font/inter_bold"
            android:lineHeight="29sp"
            android:textSize="24sp"
            android:letterSpacing="0.02"
            android:textColor="#2F302E"/>

    <!-- need fellow creator description-->
    <TextView
            android:id="@+id/need_fellow_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fellow_creator_description"
            android:gravity="center_vertical"
            android:layout_marginTop="236dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24sp"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="#4C4C4C"/>

    <!-- platform logos-->
    <FrameLayout
            android:id="@+id/platform_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:id="@+id/platformApp1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:orientation="horizontal"/>
        <LinearLayout
                android:id="@+id/platformApp2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="50dp"
                android:orientation="horizontal"/>
        <LinearLayout
                android:id="@+id/platformApp3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="90dp"
                android:orientation="horizontal"/>
    </FrameLayout>
</FrameLayout>


    <!-- bottom bar -->
    <FrameLayout

    android:id="@+id/bottom_bar"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/creators_layout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="376dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="8dp">

    <!-- share button -->
    <ImageView
            android:id="@+id/share_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10.5dp"
            android:layout_marginEnd="332.5dp"
            android:background="@drawable/share"/>

    <!-- copy button -->
    <ImageView
            android:id="@+id/copy_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="74.5dp"
            android:layout_marginEnd="268.5dp"
            android:background="@drawable/document_copy"/>


    <!-- archive button -->
    <ImageView
            android:id="@+id/archive_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="332.5dp"
            android:layout_marginEnd="10.5dp"
            android:background="@drawable/archive_add"/>
    </FrameLayout>
</FrameLayout>
