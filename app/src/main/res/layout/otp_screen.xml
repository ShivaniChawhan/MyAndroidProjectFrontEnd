<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/otp_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blured_signup">

    <LinearLayout
            android:id="@+id/otp_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#80000000">

    <FrameLayout
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle">

        <View
            android:id="@+id/cross_vector"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/rejected_color"
            android:background="@drawable/cross"/>

        <!-- Title -->
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:text="Please Enter OTP"
                android:textColor="#6B1A81"
                android:textSize="24dp"
                android:textStyle="bold" />

        <!-- Message -->
        <TextView
                android:id="@+id/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Your One Time Password (OTP) \n has been sent via Email."
                android:textColor="@color/black"
                android:textSize="18sp" />

        <!-- OTP Input Fields -->
        <LinearLayout
                android:id="@+id/otpContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">

        <EditText
                android:id="@+id/otpDigit1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="@drawable/otp_input_background"
                android:inputType="number"
                android:maxLength="1" />

        <EditText
                android:id="@+id/otpDigit2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="@drawable/otp_input_background"
                android:inputType="number"
                android:maxLength="1" />

        <EditText
                android:id="@+id/otpDigit3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="@drawable/otp_input_background"
                android:inputType="number"
                android:maxLength="1" />

        <EditText
                android:id="@+id/otpDigit4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:background="@drawable/otp_input_background"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                    android:id="@+id/otpDigit5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1" />
            <EditText
                    android:id="@+id/otpDigit6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1" />
        </LinearLayout>

        <!-- Resend Link -->
        <TextView
                android:id="@+id/noOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Did not receive OTP?"
                android:textColor="#000000"
                android:textSize="14sp" />
        <EditText
                android:id="@+id/Resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="269dp"
                android:layout_marginStart="95dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Resend"
                android:backgroundTint="#007AFF"
                android:textColor="#007AFF"
                android:textSize="14sp" />

        <!-- Verify Button -->
        <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="330dp"
                android:padding="20dp"
                android:background="@drawable/verify_bg"
                android:textAlignment="center"
                android:text="Verify"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

    </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

