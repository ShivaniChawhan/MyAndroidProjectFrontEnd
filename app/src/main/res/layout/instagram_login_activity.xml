<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_instagram_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:background="@drawable/homescreen_blur">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#80000000">

    </LinearLayout>

    <!-- Login with Instagram-->
    <FrameLayout
        android:id="@+id/instagrm_login_frame"
        android:layout_width="match_parent"
        android:layout_height="378dp"
        android:clipToOutline="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ig_background">

        <!-- cross button -->
        <FrameLayout
            android:id="@+id/cross_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="326dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="311dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ig_ecllipse">

            <View
                    android:id="@+id/cross_vector"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cross"/>
        </FrameLayout>

        <!-- Login In / Sign up text-->
        <TextView
            android:id="@+id/login_signup"
            android:layout_width="385dp"
            android:layout_height="38dp"
            android:layout_marginTop="115dp"
            android:layout_marginStart="16.5dp"
            android:layout_marginBottom="225dp"
            android:layout_marginEnd="8.5dp"
            android:gravity="top"
            android:text="@string/login_signup"
            android:fontFamily="@font/raleway_bold"
            android:lineHeight="38sp"
            android:textSize="32sp"
            android:letterSpacing="0.02"
            android:textColor="#FFFFFF"/>

        <!-- description -->
        <TextView
            android:id="@+id/login_description"
            android:layout_width="345dp"
            android:layout_height="48dp"
            android:gravity="top"
            android:layout_marginTop="171dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="159dp"
            android:text="@string/login_description_text"
            android:fontFamily="@font/poppins_regular"
            android:lineHeight="24sp"
            android:textSize="16sp"
            android:letterSpacing="0.03"
            android:textColor="#FFFFFF"/>

        <!-- continue with instagram button -->
        <FrameLayout
            android:id="@+id/continue_with_insta_button"
            android:layout_width="359dp"
            android:layout_height="64dp"
            android:layout_marginTop="248dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="66dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/continue_ig_button"
            android:elevation="14.7dp">

            <!-- continue with insta text-->
            <TextView
                android:id="@+id/continue_with_insta_text"
                android:layout_width="209dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="64dp"
                android:layout_marginBottom="12dp"
                android:gravity="top"
                android:text="@string/continue_with_ig_text"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="24sp"
                android:textSize="16sp"
                android:letterSpacing="0.03"
                android:textColor="#262626"/>

            <View
                android:id="@+id/insta_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="285dp"
                android:background="@drawable/insta_logo"/>
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>