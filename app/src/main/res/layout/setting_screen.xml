<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B1B1B">


    <!-- setting top bar-->
    <FrameLayout
            android:id="@+id/setting_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            android:clipToOutline="true"
            android:background="#212121">

        <FrameLayout
                android:id="@+id/arrow_frame"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="347dp"
                android:layout_gravity="center_vertical">

            <View
                    android:id="@+id/back_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/arrow_left"
                    android:backgroundTint="#FFFFFF"/>

        </FrameLayout>

        <!-- top bar center text -->
        <TextView
                android:id="@+id/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="top"
                android:text="@string/settings"
                android:fontFamily="@font/raleway_regular"
                android:lineHeight="19sp"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                android:textColor="#F2F2F2"/>
    </FrameLayout>

    <!-- Account setting -->
    <TextView
        android:id="@+id/account_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/setting_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:text="@string/account_set"
        android:fontFamily="@font/raleway_regular"
        android:lineHeight="19sp"
        android:textSize="16sp"
        android:letterSpacing="0.02"
        android:textColor="#F2F2F2"/>

    <!-- privacy setting -->
    <TextView
            android:id="@+id/privacy_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/setting_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="83dp"
            android:layout_marginStart="24dp"
            android:text="@string/privacy_set"
            android:fontFamily="@font/raleway_regular"
            android:lineHeight="19sp"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="#F2F2F2"/>

    <!-- notifications preferences -->
    <TextView
            android:id="@+id/notification_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/setting_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="134dp"
            android:layout_marginStart="24dp"
            android:text="@string/notificatio"
            android:fontFamily="@font/raleway_regular"
            android:lineHeight="19sp"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="#F2F2F2"/>

    <!-- logout setting -->
    <TextView
            android:id="@+id/logout_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/setting_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="185dp"
            android:layout_marginStart="24dp"
            android:text="@string/log_out"
            android:fontFamily="@font/raleway_regular"
            android:lineHeight="19sp"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="#F2F2F2"/>

    <!-- bottom menu bar-->
    <FrameLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="512dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipToOutline="true"
            android:background="#212121">

        <!-- Home button -->
        <View
                android:id="@+id/home_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="34dp"
                android:layout_marginEnd="343dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/home_btn"/>

        <TextView
                android:id="@+id/home_text"
                android:layout_width="36dp"
                android:layout_height="16dp"
                android:layout_marginTop="42dp"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="337dp"
                android:text="@string/home_btn_text"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingExtra="-2sp"
                android:lineHeight="16sp"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="top"/>

        <!-- collab button -->
        <View
                android:id="@+id/collab_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="188dp"
                android:layout_marginEnd="185dp"
                android:layout_marginBottom="34dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/collab_btn"/>

        <TextView
                android:id="@+id/collab_text"
                android:layout_width="64dp"
                android:layout_height="16dp"
                android:layout_marginTop="42dp"
                android:layout_marginStart="171dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="177dp"
                android:text="@string/my_collab"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingExtra="-2sp"
                android:lineHeight="16sp"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="top"/>

        <!-- profile button -->
        <View
                android:id="@+id/profile_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="341dp"
                android:layout_marginBottom="34dp"
                android:layout_marginEnd="36.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/profile_btn"/>

        <TextView
                android:id="@+id/profile_text"
                android:layout_width="37dp"
                android:layout_height="16dp"
                android:layout_marginTop="44dp"
                android:layout_marginStart="338dp"
                android:layout_marginEnd="20dp"
                android:text="@string/profile_btn_text"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingExtra="-2sp"
                android:lineHeight="16sp"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="top"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>